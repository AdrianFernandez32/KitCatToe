{
  "compilerOptions": {
    "target": "es2022", // Usar ECMAScript 2022 o superior
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*"], // Archivos que serán incluidos en la compilación
  "exclude": ["node_modules"] // Archivos y carpetas que serán excluidos
}
